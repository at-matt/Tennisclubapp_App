@model TennisCoach.Models.CoachProfileViewModel

@if (TempData["SuccessMessage"] != null)







{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)







{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="container mt-4" style="font-family: Arial, sans-serif;">
    <h2 class="text-center mb-4" style="color: #2c3e50; font-weight: bold;">Profile of @Model.FirstName @Model.LastName</h2>

    <div class="card p-4" style="background-color: #ecf0f1; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        <div class="mb-3">
            <strong style="color: #34495e;">Biography:</strong>
            <p style="color: #7f8c8d;">@Model.Biography</p>
        </div>
        <div class="mb-3">
            <strong style="color: #34495e;">Email:</strong> <!-- Added Email Section -->
            <p style="color: #7f8c8d;">@Model.Email</p>
        </div>
        <div class="mb-3">
            <strong style="color: #34495e;">Photo:</strong>
            @if (Model.Photo != null)
            {
                <img src="data:image;base64,@(Convert.ToBase64String(Model.Photo))" alt="Coach Photo" class="img-fluid rounded" style="max-height: 200px; object-fit: cover;" />
            }
            else
            {
                <p style="color: #7f8c8d;">No photo available.</p>
            }
        </div>

        <div class="text-center">
            <a href="@Url.Action("EditProfile", "Coach")" class="btn btn-primary" style="background-color: #3498db; border: none; padding: 10px 20px; border-radius: 4px; color: white; font-family: Arial, sans-serif;">Edit Profile</a>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa; /* Light background */
    }

    .card {
        border: none; /* Clean card layout */
    }

    h2 {
        color: #2c3e50; /* Darker text for the heading */
    }

    p {
        color: #7f8c8d; /* Light gray text for biography */
    }

    img {
        border: 1px solid #ccc; /* Light border around image */
    }
</style>
