@using TennisCoach.Models
@model MemberRegisterViewModel

<div style="font-family: Arial, sans-serif; color: #2c3e50; max-width: 400px; margin: 40px auto; padding: 20px; background-color: #ecf0f1; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <h2 style="text-align: center; color: #34495e;">Member Registration</h2>
    <form asp-action="RegMember" method="post" novalidate>

        <div class="form-group">
            <label for="FirstName" style="font-size: 16px; color: #34495e;">First Name</label>
            <input asp-for="FirstName" class="form-control" required style="padding: 10px; border-radius: 4px; border: 1px solid #bdc3c7;">
            <span asp-validation-for="FirstName" class="text-danger" style="font-size: 14px;"></span>
        </div>

        <div class="form-group">
            <label for="LastName" style="font-size: 16px; color: #34495e;">Last Name</label>
            <input asp-for="LastName" class="form-control" required style="padding: 10px; border-radius: 4px; border: 1px solid #bdc3c7;">
            <span asp-validation-for="LastName" class="text-danger" style="font-size: 14px;"></span>
        </div>

        <div class="form-group">
            <label for="Email" style="font-size: 16px; color: #34495e;">Email</label>
            <input asp-for="Email" class="form-control" required style="padding: 10px; border-radius: 4px; border: 1px solid #bdc3c7;">
            <span asp-validation-for="Email" class="text-danger" style="font-size: 14px;"></span>
        </div>

        <div class="form-group">
            <label for="Password" style="font-size: 16px; color: #34495e;">Password</label>
            <input asp-for="Password" type="password" class="form-control" required style="padding: 10px; border-radius: 4px; border: 1px solid #bdc3c7;">
            <span asp-validation-for="Password" class="text-danger" style="font-size: 14px;"></span>
        </div>

        <div class="form-group">
            <label for="ConfirmPassword" style="font-size: 16px; color: #34495e;">Confirm Password</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" required style="padding: 10px; border-radius: 4px; border: 1px solid #bdc3c7;">
            <span asp-validation-for="ConfirmPassword" class="text-danger" style="font-size: 14px;"></span>
        </div>

        <button type="submit" style="background-color: #3498db; border: none; padding: 10px 20px; border-radius: 4px; color: white; font-size: 16px; cursor: pointer; width: 100%;">
            Register
        </button>
    </form>

    <div style="text-align: center; margin-top: 15px;">
        <p style="font-size: 14px; color: #34495e;">Already have an account? <a href="@Url.Action("LoginMember", "Account")" style="color: #3498db; text-decoration: none;">Login here</a>.</p>
    </div>
</div>

<style>
    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 4px;
        border: 1px solid #bdc3c7;
    }

    .text-danger {
        color: #e74c3c; /* Red color for validation messages */
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
