@model IEnumerable<TennisCoach.Models.Coach> 

@{
    ViewData["Title"] = "Coaches";
}

<h2>Coaches</h2>

<table class="table">
    <thead>
        <tr>
            <th>Coach ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Biography</th>
            <th>Photo</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var coach in Model)
            {
                <tr>
                    <td>@coach.CoachId</td>
                    <td>@coach.FirstName</td>
                    <td>@coach.LastName</td>
                    <td>@coach.Biography</td>
                    <td>
                        @if (coach.Photo != null)
                        {
                            <img src="data:,@Convert.ToBase64String(coach.Photo)" alt="Coach Photo" style="width:100px;height:auto;" />
                        }
                        else
                        {
                            <span>No Photo Available</span>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">No coaches found.</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Home</a>
