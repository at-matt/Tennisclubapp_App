@using System.Collections
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model TennisCoach.Models.CreateSchedule

<div class="container mt-5">
    <div class="card shadow-lg border-0 bg-light">
        <!-- Set the card background to light grey -->
        <div class="card-header text-white bg-secondary">
            <!-- Darker grey header -->
            <h2 class="mb-0 text-center">Create New Schedule</h2>
        </div>
        <div class="card-body">
            <form asp-action="CreateSchedule" method="post">
                <div class="form-group mb-3">
                    <label for="EventName" class="form-label">Event Name:</label>
                    <input type="text" class="form-control" id="EventName" name="EventName" asp-for="EventName" required placeholder="Enter event name">
                </div>

                <div class="form-group mb-3">
                    <label for="Date" class="form-label">Event Date:</label>
                    <input type="date" class="form-control" id="Date" name="Date" asp-for="Date" asp-format="{0:MM/dd/yyyy}" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Location" class="form-label">Event Location:</label>
                    <input type="text" class="form-control" id="Location" name="Location" asp-for="Location" required placeholder="Enter location">
                </div>

                <div class="form-group mb-3">
                    <label for="Description" class="form-label">Description:</label>
<textarea class="form-control" id="Description" name="Description" asp-for="Description" placeholder="Add a brief description" rows="3"></textarea>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CoachId" class="form-label">Select Coach:</label>
                    <select asp-for="CoachId" class="form-select" asp-items="@(ViewData["CoachIds"] as IEnumerable<SelectListItem>)"></select>
                    <span asp-validation-for="CoachId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success px-4">Create Schedule</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 600px;
        margin: auto; /* Center the container */
    }
    .card {
        border-radius: 15px; /* Rounded corners for a softer look */
        border: 1px solid #dee2e6; /* Light border for separation */
        transition: transform 0.2s; /* Animation effect */
    }
    .card:hover {
        transform: translateY(-5px); /* Lift effect on hover */
    }
    .btn-success {
        background-color: #28a745; /* Primary button color */
        border-color: #28a745;
    }
    .btn-outline-secondary {
        color: #6c757d;
        border-color: #6c757d;
    }
    .form-label {
        font-weight: bold; /* Bold labels for better readability */
    }
</style>