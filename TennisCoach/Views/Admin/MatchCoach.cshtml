@model TennisCoach.Models.Schedules

<div class="container mt-5">
    <h1 class="display-5 text-center mb-4">Match Coach to Schedule</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="MatchCoach" method="post" class="shadow p-4 rounded bg-light">
        <div class="form-group mb-3">
            <label for="ScheduleId" class="fw-bold">Select Schedule:</label>
            @Html.DropDownListFor(s => s.ScheduleId, (List<SelectListItem>)ViewData["ScheduleIds"], "Select an option", new { @class = "form-control" })
        </div>

        <div class="form-group mb-3">
            <label for="CoachId" class="fw-bold">Select Coach:</label>
            @Html.DropDownListFor(s => s.CoachId, (List<SelectListItem>)ViewData["CoachIds"], "Select an option", new { @class = "form-control" })
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary px-4">Match Coach</button>
            <a asp-action="Index" class="btn btn-secondary ms-2 px-4">Back</a>
        </div>
    </form>
</div>