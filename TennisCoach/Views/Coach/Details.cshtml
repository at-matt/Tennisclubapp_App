@model TennisCoach.Models.Coaches

@if (TempData["SuccessMessage"] != null)







{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)







{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="container mt-4" style="font-family: Arial, sans-serif;">
    <h2 class="text-center mb-4" style="color: #2c3e50; font-weight: bold;">Coach Details</h2>
    <div class="card" style="background-color: #ecf0f1; padding: 20px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 style="color: #34495e;"><strong>First Name:</strong> @Model.FirstName</h5>
                    <h5 style="color: #34495e;"><strong>Last Name:</strong> @Model.LastName</h5>
                    <h5 style="color: #34495e;"><strong>Email:</strong> @Model.Email</h5>
                    <h5 style="color: #34495e;"><strong>Biography:</strong></h5>
                    <p style="color: #7f8c8d;">@Model.Biography</p>
                </div>
                <div class="col-md-6 text-center">
                    <h5 style="color: #34495e;"><strong>Photo:</strong></h5>
                    <img src="data:image;base64,@(Model.Photo != null ? Convert.ToBase64String(Model.Photo) : string.Empty)" alt="Coach Photo" class="img-fluid rounded" style="max-height: 200px; object-fit: cover;" />
                </div>
            </div>
            <div class="text-center mt-4">
                <a asp-action="EditProfile" asp-route-id="@Model.CoachId" class="btn" style="background-color: #3498db; border: none; padding: 10px 20px; border-radius: 4px; color: white; font-size: 16px; margin: 0 5px;">Edit</a>
                <a asp-action="CreateProfile" asp-route-id="@Model.CoachId" class="btn" style="background-color: #3498db; border: none; padding: 10px 20px; border-radius: 4px; color: white; font-size: 16px; margin: 0 5px;">Create</a>
                <a asp-controller="Coach" asp-action="Index" class="btn" style="background-color: #6c757d; border: none; padding: 10px 20px; border-radius: 4px; color: white; font-size: 16px; margin: 0 5px;">Back</a>
            </div>
        </div>
    </div>
</div>


